<Node>:
    canvas:
        Color:
            rgba: root.color
        Rectangle:
            size: self.size
            pos: self.pos


<Interface>:
    orientation: 'vertical'
    size: root.size
    grid: grid
    algorithm: algorithm

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.09

        # BoxLayout:
        #     orientation: 'vertical'
        #     size_hint: 1.8, 1

        #     Label:
        #         font_size: 12
        #         text: 'Number of Spots: ' + str(int(slider.value))

        #     Slider:
        #         id: slider
        #         min: 50
        #         max: 100
        #         value: 75
        #         step: 1
        #         orientation: 'horizontal'

        Spinner:
            id: algorithm
            text: 'A* Algorithm'
            values: 'A* Algorithm', 'Dijkstra'

        Button:
            id: clear
            text: 'Clear'
            on_press: root.clear_grid()

        Button:
            id: start
            text: 'Start'
            on_press: root.start_algorithm()

        Spinner: 
            id: speed
            text: 'Medium'
            values: 'Slow', 'Medium', 'Fast'


    Grid:
        id: grid


